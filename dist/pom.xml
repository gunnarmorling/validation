<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <parent>
      <groupId>org.jboss.seam.validation</groupId>
      <artifactId>seam-validation-parent</artifactId>
      <version>3.0.0-SNAPSHOT</version>
      <relativePath>../parent/pom.xml</relativePath>
   </parent>

   <artifactId>seam-validation-distribution</artifactId>
   <name>Seam Validation Module Distribution</name>
   <description>Builds the Seam Validation module release distribution</description>
   <packaging>pom</packaging>

   <properties>
      <maven.deploy.skip>true</maven.deploy.skip>
   </properties>

   <dependencies>

      <dependency>
         <groupId>org.jboss.seam.validation</groupId>
         <artifactId>seam-validation-api</artifactId>
         <optional>true</optional>
      </dependency>

      <dependency>
         <groupId>org.jboss.seam.validation</groupId>
         <artifactId>seam-validation-impl</artifactId>
         <optional>true</optional>
      </dependency>

      <dependency>
         <groupId>org.jboss.seam.validation</groupId>
         <artifactId>seam-validation</artifactId>
         <optional>true</optional>
      </dependency>

      <dependency>
         <groupId>org.jboss.seam.validation</groupId>
         <artifactId>seam-validation-api</artifactId>
         <version>${project.version}</version>
         <classifier>sources</classifier>
         <optional>true</optional>
      </dependency>

      <dependency>
         <groupId>org.jboss.seam.validation</groupId>
         <artifactId>seam-validation-impl</artifactId>
         <version>${project.version}</version>
         <classifier>sources</classifier>
         <optional>true</optional>
      </dependency>
 
      <dependency>
         <groupId>org.jboss.seam.validation</groupId>
         <artifactId>seam-validation-api</artifactId>
         <version>${project.version}</version>
         <classifier>javadoc</classifier>
      </dependency>

      <dependency>
         <groupId>org.jboss.seam.validation</groupId>
         <artifactId>seam-validation-example</artifactId>
         <optional>true</optional>
      </dependency>

   </dependencies>

   <build>
      <finalName>seam-validation</finalName>
      <plugins>
         <!-- Don't execute license plugin for this module -->
         <plugin>
            <groupId>com.mycila.maven-license-plugin</groupId>
            <artifactId>maven-license-plugin</artifactId>
            <executions>
            <execution>
               <phase>none</phase>
            </execution>
         </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
         </plugin>
      </plugins>
   </build>

</project>
